{
  "private": true,
  "name": "slate-vue-packages",
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "url": "https://github.com/marsprince/slate-vue"
  },
  "scripts": {
    "build": "rollup --config ./config/rollup/rollup.config.js",
    "serve": "webpack-dev-server --config ./config/webpack/site/webpack.dev.conf.js",
    "release:site": "webpack --config ./config/webpack/site/webpack.publish.conf.js",
    "watch": "yarn build --watch",
    "start": "npm-run-all --parallel --print-label watch serve",
    "release": "NODE_ENV=production yarn build && lerna publish",
    "commit": "git add . && git-cz"
  },
  "devDependencies": {
    "@razors/build-babel": "^0.0.8",
    "@razors/build-rollup": "^0.0.8",
    "babel-loader": "^8.1.0",
    "commitizen": "^4.1.2",
    "css-loader": "^3.5.2",
    "cz-conventional-changelog": "^3.2.0",
    "faker": "^4.1.0",
    "html-webpack-plugin": "^4.0.4",
    "lerna": "^3.20.2",
    "less": "^3.11.1",
    "less-loader": "^5.0.0",
    "npm-run-all": "^4.1.5",
    "style-loader": "^1.1.4",
    "ts-loader": "^6.2.2",
    "typescript": "^3.8.3",
    "vue-loader": "^15.9.1",
    "vue-template-compiler": "^2.6.11",
    "vue-tsx-support": "^2.3.3",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3",
    "webpack-merge": "^4.2.2"
  },
  "dependencies": {
    "image-extensions": "^1.1.0",
    "is-url": "^1.2.4",
    "prismjs": "^1.20.0",
    "slate-history": "^0.58.3",
    "slate-hyperscript": "^0.58.3",
    "vue": "^2.6.11",
    "vue-router": "^3.2.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
